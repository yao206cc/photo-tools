/* 结果页样式 */
.container {
    padding: 24rpx;
    background-color: #f5f5f5;
    min-height: 100vh;
    box-sizing: border-box;
}

/* 照片结果展示 */
.photo-result {
    display: flex;
    justify-content: center;
    margin-bottom: 24rpx;
}

.photo-container {
    position: relative;
    width: 300rpx;
    height: auto;
    min-height: 300rpx;
    max-height: 500rpx;
    border-radius: 12rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
}

.photo {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.watermark {
    position: absolute;
    bottom: 16rpx;
    right: 16rpx;
    padding: 4rpx 12rpx;
    background-color: rgba(0, 0, 0, 0.5);
    color: #ffffff;
    font-size: 20rpx;
    border-radius: 20rpx;
}

/* 照片信息卡片 */
.info-card {
    width: 100%;
    background-color: #ffffff;
    border-radius: 12rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.info-title {
    font-size: 32rpx;
    font-weight: 500;
    margin-bottom: 16rpx;
    color: #333;
}

.info-specs {
    margin-bottom: 16rpx;
}

.spec-item {
    margin-bottom: 8rpx;
    font-size: 28rpx;
    display: flex;
    align-items: center;
}

.spec-label {
    color: #888;
    margin-right: 8rpx;
    width: 140rpx;
}

.spec-value {
    color: #333;
    font-weight: 500;
}

/* 背景色预览 */
.color-preview {
    width: 40rpx;
    height: 40rpx;
    border-radius: 8rpx;
    border: 1rpx solid #ddd;
    margin-right: 12rpx;
}

.compliance {
    margin-top: 16rpx;
}

.tag-success {
    background-color: rgba(7, 193, 96, 0.1) !important;
    color: #07c160 !important;
}

.tag-warning {
    background-color: rgba(252, 163, 17, 0.1) !important;
    color: #fca311 !important;
}

/* 版本选择部分 */
.version-section {
    width: 100%;
    background-color: #ffffff;
    border-radius: 12rpx;
    padding: 24rpx;
    margin-bottom: 140rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
    font-size: 32rpx;
    font-weight: 500;
    margin-bottom: 24rpx;
    color: #333;
}

/* 版本轮播 */
.version-swiper {
    height: 480rpx;
    width: 100%;
}

.version-swiper-item {
    display: flex;
    justify-content: center;
    padding: 10rpx;
    box-sizing: border-box;
}

.version-card {
    width: 100%;
    background-color: #f9f9f9;
    border-radius: 12rpx;
    padding: 24rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
    box-sizing: border-box;
    transform: scale(0.95);
    transition: all 0.3s ease;
    border: 2rpx solid transparent;
}

.version-card.current-card {
    transform: scale(1);
    background-color: #ffffff;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
    border: 3rpx solid #0052d9;
}

.version-card.current-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6rpx;
    background: linear-gradient(90deg, #0052d9, #3580fe);
    border-radius: 6rpx 6rpx 0 0;
}

.version-card.current-card .version-title {
    color: #0052d9;
}

.version-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16rpx;
}

.version-title {
    font-size: 30rpx;
    font-weight: 500;
    color: #333;
    transition: color 0.3s ease;
}

.version-tag {
    font-size: 24rpx;
    padding: 4rpx 16rpx;
    border-radius: 20rpx;
    background-color: #f0f0f0;
    color: #888;
}

.version-tag.free {
    background-color: #edf2fd;
    color: #0052d9;
}

.version-tag.premium {
    background-color: rgba(53, 128, 254, 0.1);
    color: #3580fe;
}

.version-tag.pro {
    background-color: rgba(153, 0, 255, 0.1);
    color: #9900ff;
}

.version-price {
    font-size: 48rpx;
    font-weight: 700;
    color: #333;
    margin: 16rpx 0;
}

.price-currency {
    font-size: 28rpx;
    font-weight: normal;
    margin-right: 4rpx;
}

.version-desc {
    font-size: 26rpx;
    color: #888;
    margin-bottom: 16rpx;
}

.version-divider {
    height: 1rpx;
    background-color: #eee;
    margin: 16rpx 0;
}

.version-features {
    margin-top: 16rpx;
}

.feature-item {
    display: flex;
    align-items: center;
    margin-bottom: 12rpx;
    font-size: 24rpx;
    color: #333;
}

.feature-item text {
    margin-left: 12rpx;
}

.feature-item.disabled {
    color: #999;
}

/* 版本选择器 */
.version-selector {
    display: flex;
    justify-content: center;
    margin-top: 24rpx;
}

.selector-item {
    padding: 8rpx 24rpx;
    margin: 0 12rpx;
    font-size: 28rpx;
    color: #666;
    border-radius: 24rpx;
    transition: all 0.3s ease;
}

.selector-item.active {
    background-color: #0052d9;
    color: #ffffff;
}

/* 底部操作按钮 */
.footer {
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #ffffff;
    width: 100%;
    padding: 20rpx 24rpx 40rpx 24rpx;
    box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
    z-index: 10;
}

.btn-container {
    display: flex;
    justify-content: space-between;
    width: 100%;
}

.btn-back,
.btn-complete {
    width: 45%;
}

/* 适配 iPhone X 等机型底部安全区域 */
.safe-bottom {
    height: env(safe-area-inset-bottom);
}

/* 加载状态 */
.loading-container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(255, 255, 255, 0.8);
    z-index: 999;
}